<div class="container margin-top">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag product_img(@product.thumb_image_url ,'thumb') %>
    </div>

    <div class="col-md-5">
      <h1><%= @product.title %></h1>

      <hr>

      <em><%= @product.description %></em>

      <p><%=  @product.price %></p>

      <hr>


      <%= link_to 'Back', products_path %> |

        <%= link_to 'Edit', edit_product_path(@product) %> 
    
    </div>
  </div>
</div>