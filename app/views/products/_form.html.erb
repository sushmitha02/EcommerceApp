<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
<div class="col-md-6">
      <div class="form-group center">
        <%= form.label :title %><br>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group center">
        <%= form.label :description %><br>
        <%= form.text_area :description, class: 'form-control' %>
      </div>

      <div class="form-group center">
        <%= form.label :price %><br>
        <%= form.text_field :price, class: 'form-control' %>
      </div>

      <div class="form-group center">
        <label class="btn btn-primary">
          Upload a main image<%= form.file_field :main_image, multiple: true, style: 'display:none;' %>
        </label>
      </div>

      <div class="form-group center">
        <label class="btn btn-primary">
          Upload a thumb image<%= form.file_field :thumb_image, multiple: true, style: 'display:none;' %>
        </label>
      </div>

    <div class="actions center">
      <%= form.submit 'save Product' , class: 'btn btn-primary btn-block'%>
    </div>
<% end %>
